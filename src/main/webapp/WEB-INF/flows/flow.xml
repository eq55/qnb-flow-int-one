<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.springframework.org/schema/webflow 
							http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		start-state="vrnStartUp">
	
	<view-state id="vrnStartUp" view="vrn">
        <transition on="submit" to="vrnLookup"/>
    </view-state>
	
	<action-state id="vrnLookup">
		<evaluate expression="vrnLookupService.doCheck" />
		<transition on="success" to="vrnCheck" />
		<transition on="vrnMissing" to="vrnStartUp" />
	</action-state>
	
	<view-state id="vrnCheck" view="yourCar">
	</view-state>
	
	
</flow>